<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="badgerPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>com.objectdb.jpa.Provider</provider>

        <class>com.noe.badger.entity.AbstractEntity</class>
        <class>com.noe.badger.entity.AchievementEntity</class>
        <class>com.noe.badger.entity.ScoreEntity</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.user" value="admin"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>



